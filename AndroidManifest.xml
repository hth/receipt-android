<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.receiptofi.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:name="com.receiptofi.android.ReceiptofiApplication"
        android:allowBackup="true"
        android:icon="@drawable/r"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.receiptofi.android.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.receiptofi.android.HomePageActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.receiptofi.android.MenuPageActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>