<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rd_item_selector"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/rd_item_list_footer_tax_title"
        style="@style/rd_list_item_tax_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rd_item_header_tax_title"/>

    <TextView
        android:id="@+id/rd_item_list_footer_tax_amount"
        style="@style/rd_list_item_tax_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rd_item_list_footer_tax_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rd_item_list_footer_tax_title"
        android:gravity="right"
        android:text="@string/placeholder_text"
        android:textColor="@color/app_theme_txt_color"/>

</RelativeLayout>