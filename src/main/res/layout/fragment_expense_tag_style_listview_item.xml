<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tag_color"
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/tagColorMargin"
        android:layout_marginLeft="@dimen/tagColorMargin_left"
        android:layout_marginTop="@dimen/tagColorMargin"
        android:background="@color/red"/>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/tagTextMargin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/tagTextMargin"
        android:text="@string/hello_world"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
</LinearLayout>
