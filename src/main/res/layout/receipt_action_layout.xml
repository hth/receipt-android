<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/receipt_action_recheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|left"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:scaleX="1.0"
        android:scaleY="1.0"
        style="@style/text_large_with_blue_color"
        android:text="@string/receipt_action_recheck"/>

    <TextView
        android:id="@+id/receipt_action_expense_tag_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end|left|bottom"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        style="@style/text_receipt_action_label"
        android:text="@string/receipt_action_expense_tag_label"/>

    <ListView
        android:id="@+id/receipt_action_expense_tag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="4"
        android:choiceMode="singleChoice"
        android:divider="@null"/>

    <TextView
        android:id="@+id/receipt_action_note_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end|left|bottom"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        style="@style/text_receipt_action_label"
        android:text="@string/receipt_action_note_label"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray"/>

    <EditText
        android:id="@+id/receipt_action_note"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:minLines="3"
        android:maxLines="4"
        android:gravity="start|top"
        android:layout_weight="3"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:hint="@string/receipt_action_note_hint"
        android:background="@drawable/text_view_rounded_border"/>

</merge>