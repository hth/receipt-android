<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/rd_biz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/text_larger"
            android:text="@string/no_receipt_selected"/>

    <LinearLayout
        android:id="@+id/rd_biz_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/rd_biz_add_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/action_text_smaller"/>

    <TextView
        android:id="@+id/rd_biz_add_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/action_text_smaller"/>

    <TextView
        android:id="@+id/rd_biz_add_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/action_text_smaller"/>

    </LinearLayout>

    <TextView
        android:id="@+id/rd_biz_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/call_contact"
        style="@style/action_text_medium"/>

    </LinearLayout>
    </merge>