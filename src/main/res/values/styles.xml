<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="logo_text_style" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/app_theme_txt_color </item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!--    Expandable List view    -->
    <style name="exp_list_parent_text_left_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="exp_list_parent_text_right_style" parent="@style/exp_list_parent_text_left_style">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="exp_list_child_text_left_primary_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/app_theme_txt_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="exp_list_child_text_left_secondary_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="exp_list_child_text_right_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/app_theme_txt_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    RD view    -->
    <style name="text_large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_larger" parent="@style/text_large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="action_text_medium" parent="@style/text_medium">
        <item name="android:textColor">@drawable/action_text_gray_darker_color</item>
    </style>

    <style name="text_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="text_small_bold" parent="style/text_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_smaller" parent="@style/text_small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="action_text_smaller" parent="@style/text_smaller">
        <item name="android:textColor">@drawable/action_text_gray_dark_color</item>
    </style>

    <style name="action_text_small" parent="@style/text_small">
        <item name="android:textColor">@drawable/action_text_gray_dark_color</item>
    </style>

    <style name="rd_list_item_text_left_primary_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/app_theme_txt_color</item>
        <item name="android:paddingTop">@dimen/rd_list_item_vertical_padding</item>
    </style>

    <style name="rd_list_item_text_left_secondary_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:paddingBottom">@dimen/rd_list_item_vertical_padding</item>
    </style>

    <style name="rd_list_item_price_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray_darker</item>
    </style>

    <style name="rd_list_item_header_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rd_list_item_tax_footer_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rd_list_item_total_footer_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Receipt drawer view    -->
    <style name="text_receipt_action_label" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Notification view    -->
    <style name="text_notification" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="date_notification" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/app_theme_txt_color</item>
        <item name="android:paddingTop">@dimen/notification_list_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/notification_list_vertical_padding</item>
    </style>

    <style name="billing_history_list_item_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:paddingBottom">@dimen/rd_list_item_vertical_padding</item>
    </style>

<!--  /////////////////////////////////////////////////////////////////////////////////////// -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
</resources>