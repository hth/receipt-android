<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="logo_text_style" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/app_theme_txt_color </item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
    </style>


<!--  /////////////////////////////////////////////////////////////////////////////////////// -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="login_fb_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/login_fb_button_style</item>
    </style>

    <style name="login_button_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/login_button_style</item>
    </style>

    <style name="homepage_text_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="settings_text_heading_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_text_subheading_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>